{
  "name": "bee2bee_frontend",
  "version": "1.0.0",
  "description": "The web frontend for the bee2bee platform",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy && serverless client deploy --no-confirm",
    "dev": "nuxt dev --spa",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate --spa",
    "config:aws": "source ~/.bashrc && aws cloudformation describe-stacks --stack-name bee-to-bee-api-dev --query \"Stacks[0].Outputs\"> aws.json",
    "json-server": "json-server --watch db.json --port 5000"
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.0-rc19",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "@nuxtjs/gtm": "^2.2.3",
    "aws-amplify": "^2.2.7",
    "aws-amplify-vue": "^1.1.4",
    "cookie-universal-nuxt": "^2.1.3",
    "graphql-tag": "^2.10.3",
    "nuxt": "^2.0.0",
    "serverless": "^1.67.0",
    "serverless-finch": "^2.5.2",
    "vuelidate": "^0.7.5"
  },
  "devDependencies": {
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "json-serve": "^0.1.0"
  }
}
